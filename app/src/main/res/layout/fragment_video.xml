<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.VideoFragment"
    android:background="@drawable/brdr_daily">

    <TextView
        android:id="@+id/txt_videolist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Video"
        android:textStyle="bold"
        style="@style/teksstyle"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_4"
        android:layout_below="@id/txt_videolist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"/>

</RelativeLayout>