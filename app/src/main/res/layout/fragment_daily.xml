<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DailyFragment"
    android:id="@+id/page_daily">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="60dp">

        <TextView
            android:id="@+id/txtdaily"
            style="@style/teksstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daily Activity"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/txtdaily"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@drawable/brdr_daily"
            android:elevation="2dp" />

        <TextView
            android:id="@+id/txtfriend"
            style="@style/teksstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycler_view_1"
            android:layout_marginTop="20dp"
            android:text="Friend List"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_show"
            style="@style/btnstyle_2"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_below="@id/recycler_view_1"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/txtfriend"
            android:gravity="center"
            android:text="Show"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/page_daily_1"
            android:layout_below="@id/btn_show"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>

</FrameLayout>