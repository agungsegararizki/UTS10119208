<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.profile.ContactFragment"
    android:background="@drawable/brdr_daily">

    <TextView
        android:id="@+id/txt_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Me"
        style="@style/teksstyle"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_phone"
        style="@style/btnstyle_X"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/txt_contact"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="24dp"
        android:drawableLeft="@drawable/logo_phone"
        android:paddingStart="10dp"
        android:text="+62 838 2538 2525"
        android:textAllCaps="false"
        android:textSize="12dp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_gmail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/btn_phone"
        style="@style/btnstyle_X"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="agungsegara99@gmail.com"
        android:textStyle="bold"
        android:textSize="12dp"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/logo_gmail"
        android:paddingStart="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_github"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/btn_gmail"
        style="@style/btnstyle_X"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="agungsegararizki"
        android:textStyle="bold"
        android:textSize="12dp"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/logo_github"
        android:paddingStart="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_whatsapp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/btn_github"
        style="@style/btnstyle_X"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="+62 838 2538 2525"
        android:textStyle="bold"
        android:textSize="12dp"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/logo_whatsapp"
        android:paddingStart="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_telegram"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/btn_whatsapp"
        style="@style/btnstyle_X"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="+62 838 2538 2525"
        android:textStyle="bold"
        android:textSize="12dp"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/logo_telegram"
        android:paddingStart="10dp"/>

</RelativeLayout>